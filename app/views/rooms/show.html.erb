<h1 style="text-align: center"><%= @room.room_name %></h1>
<hr />
<div class="row">
  <div class="col-md-6">
    <div class="well">

    <div class="room-show-pic"><%= image_tag @room.photo.url(:medium) %></div>
    <br />

    <div class="list-group">
      <li class="list-group-item active"><%= @room.room_name %></li>
      <li class="list-group-item active">Location: <%= @room.location %></li>
      <li class="list-group-item active"><%= @room.description %></li>
    </div>

    </div>
  </div>
  <div class="col-md-1">
  </div>
  <div class="col-md-5">
    <h3>Schedule a meeting for the <%= @room.room_name %></h3>
    <%= render 'meeting_scheduler' %>
  </div>
</div>

<hr />

<h1>Meetings Scheduled for <%= @room.room_name %></h1>
<table id='meetings-table' class='table table-striped'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Scheduler</th>
    </tr>
  </thead>

  <tbody>
  <% @room.meetings.each do |meeting| %>
    <tr>
      <td><%= meeting.title %></td>
      <td><time><%= meeting.start_time %></time></td>
      <td><time><%= meeting.end_time %></time></td>
      <td><%= meeting.user.full_name %></td>
      <td><%= link_to('Leave a Comment', new_comment_path, class: "btn btn-primary btn-sm") %></td>
    </tr>
  <% end %>
  </tbody>
</table>

