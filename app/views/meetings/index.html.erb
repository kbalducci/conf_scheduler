<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="well well-lg">
        <h3 style="text-align: center">Schedule a Meeting</h3>
      </div>
    <%= render 'meeting_form' %>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-8">
      <div class="well well-lg">
        <h2 style="text-align: center">Scheduled Meetings  </h2>
      </div>
<table id='meetings-table' class='table table-striped'>
  <thead>
    <tr>
      <th>Meeting</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Scheduled by</th>
      <th>Location</th>
      <th>Comment</th>
    </tr>
  </thead>
  <tbody>
  <% @meetings.each do |meeting| %>
    <tr>
      <td><%= meeting.title %></td>
      <td><time><%= meeting.start_time %></time></td>
      <td><time><%= meeting.end_time %></time></td>
      <td><%= meeting.user.full_name %></td>
      <td><%= meeting.room.location %></td>
      <td><%= meeting.room.room_name %></td>
      <td><%= link_to('Leave a Comment', new_comment_path, class: "btn btn-primary") %></td>
    </tr>
  <% end %>
  </tbody>
</table>

  </div>
</div>
