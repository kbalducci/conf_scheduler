<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :message %>

    <%= f.association :user, label_method: :first_name, value_method: :id, include_blank: false %>

    <%= f.association :meeting, label_method: :title, value_method: :id, include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

